<?xml version="1.0"?>
<robot name="pan_tilt">

	<!-- definire culori si transparenta -->
	<material name="white">
		<color rgba="1 1 1 1"/>
	</material>

	<material name="blue">
		<color rgba="0 0 1 0.5"/>
	</material>

	<material name="yellow">
		<color rgba="1 1 0 1"/>
	</material>

	<material name="red">
		<color rgba="1 0 0 0.8"/>
	</material>


	<!-- baza robotului -->
	<link name="base_link">

		<!-- baza robotului VIZUAL-->
		<visual>

			<!-- baza robotului GEOMETRIE-->
			<geometry>
				<box size="1 1 0.05"/>
			</geometry>
			<material name="red"/>
			<origin rpy="0 0 0" xyz="0 0 0.025"/>

		</visual>

	</link>


</robot>
